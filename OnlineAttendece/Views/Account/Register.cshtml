
@{
    Layout = null;
}


<!DOCTYPE html>
<link rel="shortcut icon" href="assets/img/favicon.png">
<link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">
<link rel="stylesheet" href="/~Content/assets/plugins/fontawesome/css/fontawesome.min.css">
<link rel="stylesheet" href="~/Content/assets/plugins/fontawesome/css/all.min.css">
<link rel="stylesheet" href="~/Content/assets/css/style.css">
@if (TempData["RegistrationSuccess"] != null && (bool)TempData["RegistrationSuccess"])
{
    <script>
        alert('You are successfully registered. Please Click Ok And Login Now');
        window.location.href = '@Url.Action("Index", "Account")';
    </script>
}

<body>

    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <img class="img-fluid logo-dark" src="~/Content/IMG/logo1.png" alt="Logo" style="height:65px; margin-bottom:-10px;margin-top:-10px;">
                <div class="loginbox">
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>User Registration</h1>
                            <p class="account-subtitle">Access to our dashboard</p>

                            <form action="Registererd" method="post" name="Register">

                                @*<div class="form-group" >
                                        <label asp-for="UserEmail" for="exampleInputUserName" class="form-control-label">User Id</label>
                                        <div class="pass-group">
                                            <input asp-for="UserEmail" name="UserEmail" id="UserId" class="form-control" placeholder="Enter User ID" required />
                                        </div>
                                    </div>*@
                                <div class="form-group">
                                    <label asp-for="UserName" for="exampleInputUserName" class="form-control-label">User Name</label>
                                    <div class="pass-group">
                                        <input asp-for="UserName" name="UserName" id="UserName" class="form-control" placeholder="Enter User Name" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MobileNumber" for="exampleInputMobileNumber" class="form-control-label">Mobile Number</label>
                                    <div class="pass-group">
                                        <input asp-for="MobileNumber" name="MobileNumber" id="MobileNumber" class="form-control" aria-describedby="MobileNumberHelp" placeholder="Enter Phone Number" required />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserEmail" for="exampleInputUserEmail" class="form-control-label">Email Address</label>
                                    <div class="pass-group">
                                        <input asp-for="UserEmail" type="email" name="UserEmail" id="UserEmail" class="form-control" aria-describedby="UserEmailHelp" placeholder="Enter Email Address" required />
                                        @if (!string.IsNullOrEmpty(ViewBag.EmailError))
                                        {
                                            <span id="emailError" class="text-danger">@ViewBag.EmailError</span>
                                        }
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserPassword" for="exampleInputUserPassword" class="form-control-label">Password</label>
                                    <div class="pass-group">
                                        <input asp-for="v" type="password" name="UserPassword" id="UserPassword" class="form-control" aria-describedby="UserPasswordHelp" placeholder="Enter Password" required />
                                    </div>
                                </div>
                                <div class="form-group mb-4">
                                    <button class="btn btn-lg btn-block btn-primary" type="submit">Register</button>
                                </div>
                            </form>

                            <div class="login-or">
                                <span class="or-line"></span>
                                <span class="span-or">or</span>
                            </div>

                            <div class="social-login">
                                <span>Register with</span>
                                <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a><a href="#" class="google"><i class="fab fa-google"></i></a>
                            </div>

                            <div class="text-center dont-have">Already have an account? <a href="@Url.Action("Index","Account")">Login</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/Content/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/feather.min.js"></script>
    <script src="~/Content/assets/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add focus event listener to the email input field
            $("#UserEmail").focus(function () {
                // Hide the error message when the input gains focus
                $("#emailError").hide();
            });

        });

    </script>

</body>
