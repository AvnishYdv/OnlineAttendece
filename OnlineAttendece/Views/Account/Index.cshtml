
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<style>
    body {
        background-image: url(https://media.giphy.com/media/U3qYN8S0j3bpK/giphy.gif);
        background-repeat: no-repeat;
        background-size: cover;
        width: 100%;
        height: 100%; 
    }
    .error-message {
        color: red;
        margin-right:40px;
        font-size:20px;
        font-weight:700;
    }
    .error-message, li{
        list-style:none;
    }
</style>
<link href="https://fonts.googleapis.com/css?family=Kaushan+Script" rel="stylesheet">
<link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto" style=" border-radius: 20px; margin-top: 100px; background-color: #8cd1e9; opacity:.9 ">
                <div id="first">
                    <div class="myform form">
                        <div class="logo mb-5 m-4">
                            <div class="col-md-12 text-center">
                                <h1> Admin Login</h1>
                            </div>
                        </div>
                        <form action="Login" method="post" name="login">
                            <div class="form-group">
                                <label for="exampleInputUserId" class="ml-5">User Id</label>
                                <input type="text" name="UserId" class="form-control w-75 mx-auto text-center" id="UserId" aria-describedby="UserIdHelp" placeholder="Enter User Id" required /> <!-- Added mx-auto class -->
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword" class="ml-5">Password</label>
                                <input type="password" name="password" id="password" class="form-control w-75 mx-auto text-center" aria-describedby="PasswordHelp" placeholder="Enter Password" required /> <!-- Added mx-auto class -->
                            </div>
                            <div class="form-group">
                                <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-block mybtn btn-primary tx-tfm w-25 mx-auto">Login Now</button>
                            </div>
                            <div id="error-message" class="error-message text-center">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</div>
                            <div class="col-md-12 mb-3">
                                <p class="text-center">
                                    <a href="javascript:void();" class="google btn mybtn">
                                        <i class="fa fa-google-plus"></i> Signup using Google
                                    </a>
                                </p>
                            </div>
                            <div class="form-group">
                                <p class="text-center">Don't have account? <a href="#" id="signup">Sign up here</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.15.1/jquery.validate.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        function hideErrorMessage() {
            $('#error-message').html(''); 
        }
        $('#loginForm').submit(function (event) {
            event.preventDefault(); 
            hideErrorMessage();
        });
        $('#userId, #password').focus(function () {
            hideErrorMessage();
        });
    </script>
</body>