@{
    ViewBag.Title = "Workingday";
}

<style>
    .trWork, th {
        border: 2px solid blue;
    }

    .trbody, td {
        border: 1px solid blue;
    }
</style>
<div class="row d-flex justify-content-center align-items-center ">
    <h2 class="text-center">Working day Master</h2>
    <div class="col-md-9 m-xl-4">
        <form action="/Home/WorkingdayAdd" method="post">
            <div class="row">
                <div class="col-md-6 pr-md-8">
                    <div class="form-group">
                        <label asp-for="Day_Of_Week">Day Of Week:</label>
                        <input asp-for="Day_Of_Week" class="form-control" name="Day_Of_Week" placeholder="Enter Days Of Week" />
                    </div>
                </div>
                <div class="col-md-6 pl-md-8 col-sm-6">
                    <div class="form-group">
                        <label asp-for="Start_Time">Start Time:</label>
                        <input asp-for="Start_Time" class="form-control" name="Start_Time" placeholder="Enter Start Time HH:MM" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 pr-md-8">
                    <div class="form-group">
                        <label asp-for="End_Time">End Time:</label>
                        <input asp-for="End_Time" class="form-control" name="End_Time" placeholder="Enter End Time HH:MM" />
                    </div>
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">Add Working Day</button>
            </div>
        </form>
    </div>
</div>
@*This Is Delete Post Form*@

<form id="deleteForm" action="@Url.Action("DeleteWorkingDay", "Home")" method="post">
    <input type="hidden" name="id" id="WorkingDayId" value="" />
</form>s
<div class="container mt-4">
    <h2 class="text-center ">Working day List</h2>
    <table class="table m-1 mt-4">
        <thead>
            <tr class=" text-center trWork">
                <th>Working Day ID</th>
                <th>Day Of Week</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var WorkingDays in Model)
            {
                <tr class="text-center trbody">
                    <td>@WorkingDays.Working_Day_Id</td>
                    <td>@WorkingDays.Day_Of_Week</td>
                    <td>@WorkingDays.Start_Time</td>
                    <td>@WorkingDays.End_Time</td>
                    <td>
                        <a href="@Url.Action("Edit", "Home", new { id = WorkingDays.Working_Day_Id })"><i class="bi bi-pencil-square"></i></a> |
                        <a href="@Url.Action("DeleteWorkingDay", "Home", new { id = WorkingDays.Working_Day_Id })"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function DeleteWorkingDay(WorkingDayId) {
        if (confirm('Are you sure you want to delete this attendance record?')) {
            document.getElementById("WorkingDayId").value = WorkingDayId;
            document.getElementById("deleteForm").submit();
        }
    }
</script>