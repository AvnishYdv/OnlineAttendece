@model IEnumerable<OnlineAttendece.Models.Attendence>

@{
    ViewBag.Title = "Chart";
}

<h2 class="text-center m-2">Attendence Report</h2>

@if (Model != null && Model.Any())
{
    <table class="table mt-4">
        <tr class="trreport">
            <th>@Html.DisplayNameFor(model => model.Attendence_Id)</th>
            <th>@Html.DisplayNameFor(model => model.Attendence_Date)</th>
            <th>@Html.DisplayNameFor(model => model.Cheack_In_Time)</th>
            <th>@Html.DisplayNameFor(model => model.Cheack_Out_Time)</th>
            <th>@Html.DisplayNameFor(model => model.EMP_Id)</th>
        </tr>

    </table>

    <div>
        <canvas id="attendanceChart" width="800" height="400"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    @section scripts {
        <script>
            // Prepare data for the chart
            var labels = [];
            var checkInTimes = [];
            var checkOutTimes = [];

            @foreach (var item in Model)
            {
                <text>
                    labels.push('@item.Attendence_Date.ToString("MM/dd/yyyy")');
                    checkInTimes.push('@item.Cheack_In_Time');
                    checkOutTimes.push('@item.Cheack_Out_Time');
                </text>
            }

            // Render chart only if there is data available
            if (labels.length > 0 && checkInTimes.length > 0 && checkOutTimes.length > 0) {
                var ctx = document.getElementById('attendanceChart').getContext('2d');
                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Check In Time',
                            data: checkInTimes,
                            borderColor: 'rgba(75, 192, 192, 1)',
                            borderWidth: 1,
                            fill: false
                        }, {
                            label: 'Check Out Time',
                            data: checkOutTimes,
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 1,
                            fill: false
                        }]
                    },
                    options: {
                        scales: {
                            yAxes: [{
                                ticks: {
                                    beginAtZero: true
                                }
                            }]
                        }
                    }
                });
            }
        </script>
    }
}
else
{
    <p>No attendance data available.</p>
}
