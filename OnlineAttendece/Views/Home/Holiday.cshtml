<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid">
            <form action="/Home/HolidayAdd" method="post">
                <div class="row">
                    <div class="col-xl-12 col-sm-12 col-12 ">
                        <div class="breadcrumb-path mb-4">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index","Home")">Home</a>
                                </li>
                                <li class="breadcrumb-item active">Holiday Master </li>
                            </ul>
                            <h3>Create Holiday </h3>
                        </div>
                        <div class="col-xl-12 col-sm-12 col-12 ">
                            <div class="card ">
                            </div><div class="card-header">
                                <h2 class="card-titles">
                                    Working day  Details<span>
                                        Please Enter Correct Detiles.
                                    </span>
                                </h2>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-xl-6 col-sm-12 col-12" style="display:none;">
                                        <div class="form-group">
                                            <label asp-for="Holiday_Id">Holiday Id:</label>
                                            <input asp-for="Holiday_Id" class="form-control" id="Holiday_Id" name="Holiday_Id" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6 form-group">
                                        <label asp-for="Holiday_Name">Holiday Name:</label>
                                        <input asp-for="Holiday_Name" class="form-control" name="Holiday_Name" placeholder="Enter Holiday Name" />
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label asp-for="Holiday_Date">Holiday Date:</label>
                                        <input asp-for="Holiday_Date" class="form-control" name="Holiday_Date" placeholder="Enter Holiday Date " />
                                    </div>
                                </div>
                                <div class="col-xl-12 col-sm-12 col-12 mt-4 ">
                                    <div class="row">
                                        <div class="col-xl-12 col-sm-12 col-12 ">
                                            <div class="form-btn text-center">
                                                <button type="submit" class="btn btn-apply w-auto">Add Holiday</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <form id="deleteForm" action="@Url.Action("DeleteHoliday", "Home")" method="post">
                <input type="hidden" name="id" id="Holiday_Id" value="" />
            </form>

            <div class="col-xl-12 col-sm-12 col-12 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center m-4">Holidays List</h2>
                        <div class="table-responsive">
                            <table class="table  custom-table  no-footer">
                                <thead>
                                    <tr class="text-center trHoli">
                                        <th>Holiday Id</th>
                                        <th>Holiday Name</th>
                                        <th>Holiday Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var holiday in Model)
                                    {
                                        <tr class="text-center trbody">
                                            <td>@holiday.Holiday_Id</td>
                                            <td>@holiday.Holiday_Name</td>
                                            <td>@holiday.Holiday_Date.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <label>
                                                    <a class="action_label5" href="@Url.Action("Edit", "Home", new { id = holiday.Holiday_Id })">Edit<i data-feather="edit"></i></a>
                                                </label>
                                                <label>
                                                    <a class="action_label4" href="@Url.Action("DeleteHoliday", "Home", new { id = holiday.Holiday_Id })" onclick="deleteHoliday(@holiday.Holiday_Id)">Delete<i data-feather="trash-2"></i></a>
                                                </label>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteHoliday(Holiday_Id) {
        if (confirm('Are you sure you want to delete this attendance record?')) {
            document.getElementById("Holiday_Id").value = Holiday_Id;
            document.getElementById("deleteForm").submit();
        }
    }
</script>
