@model IEnumerable<OnlineAttendece.Models.WorkingDay>


@{
    ViewBag.Title = "WorkingdayReport";
}
<style>
    .trreport, th {
        text-align: center;
        background: #434a54;
        color: antiquewhite;
    }

    .trreport1, td {
        text-align: center;
    }
</style>
<div class="main-wrapper">
    <div class="page-wrapper">
        <div class="content container-fluid">
            <div class="row">
                <div class="col-xl-12 col-sm-12 col-12 ">
                    <div class="breadcrumb-path mb-4">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index","Home")">Home</a>
                            </li>
                            <li class="breadcrumb-item active">Working day Report</li>
                        </ul>
                        <h3>Create Working day</h3>
                    </div>
                    <h2 class="text-center m-4">Working day Report</h2>
                </div>
                <div class="col-xl-12 col-sm-12 col-12 ">
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table  custom-table  no-footer">
                                <tr class="trreport">
                                    <th>Sr. No.</th>
                                    <th>Day Of Week</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                </tr>

                                @{int i = 1; }
                                @foreach (var item in Model)
                                {
                                    if (@item.Holidaymatch == true)
                                    {
                                        <tr class="trreport1" style="background-color:red; color:black;">
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.Day_Of_Week)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Start_Time)</td>
                                            <td>@Html.DisplayFor(modelItem => item.End_Time)</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr class="trreport1">
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.Day_Of_Week)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Start_Time)</td>
                                            <td>@Html.DisplayFor(modelItem => item.End_Time)</td>
                                        </tr>
                                    }
                                    i++;
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 mt-4 text-center">
                    <button class="btn btn-apply w-auto" onclick="downloadExcel()">Download Excel</button>
                </div>
                <div class="col-md-6 mt-4 text-center">
                    <button class="btn btn-apply w-auto" onclick="downloadPDF()">Download PDF</button>
                </div>
            </div>
        </div>
    </div>
</div>
@*Old Data *@
<a id="downloadLink" href="@Url.Action("DownloadExcelWorkingDay", "Home")" style="display:none;">Download Excel</a>
<a id="downloadPDFLink" href="@Url.Action("DownloadPDFWorkingDay", "Home")" style="display:none;">Download Excel</a>

<script>
    // Function to trigger download when button is clicked
    function downloadExcel() {
        // Simulate clicking on the download link
        document.getElementById("downloadLink").click();
    };
    function downloadPDF() {
        // Simulate clicking on the download link for PDF
        document.getElementById("downloadPDFLink").click();
    }
</script>