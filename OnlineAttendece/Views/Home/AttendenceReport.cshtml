@model IEnumerable<OnlineAttendece.Models.Attendence>

@{
    ViewBag.Title = "AttendenceReport";
}
<style>
    .trreport, th {
        border: 2px solid #434a54;
        text-align: center;
        background: #434a54;
        color: antiquewhite;
    }
    .trreport1, td {
        border: 1px solid orange;
        text-align: center;
    }
</style>
<h2 class="text-center m-2 " >Attendence Report</h2>

<table class="table mt-4">
    <tr  class="trreport">
        <th>@Html.DisplayNameFor(model => model.Attendence_Id)</th>
        <th>@Html.DisplayNameFor(model => model.Attendence_Date)</th>
        <th>@Html.DisplayNameFor(model => model.Cheack_In_Time)
        <th>@Html.DisplayNameFor(model => model.Cheack_Out_Time)</th>
        <th>@Html.DisplayNameFor(model => model.EMP_Id)</th>
    </tr>
    @{ int i = 1;}

@foreach (var item in Model) {
    <tr  class="trreport1">
        <td>@i</td>
        <td>@Html.DisplayFor(modelItem => item.Attendence_Date)</td>
        <td>@Html.DisplayFor(modelItem => item.Cheack_In_Time)</td>
        <td>@Html.DisplayFor(modelItem => item.Cheack_Out_Time)</td>
        <td>@Html.DisplayFor(modelItem => item.EMP_Name)</td>
    </tr>
    i++;
}

</table>
